<p id="notice"><%= notice %></p>

<h1>Sightings</h1>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Calendar Color</th>
      <th>Animal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sightings.each do |sighting| %>
      <tr>
        <td><%= sighting.date %></td>
        <td><%= sighting.time %></td>
        <td><%= sighting.latitude %></td>
        <td><%= sighting.longitude %></td>
        <td><%= sighting.color %></td>
        <td><%= sighting.animal.name %></td>
        <td><%= link_to 'Show', sighting %></td>
        <td><%= link_to 'Edit', edit_sighting_path(sighting) %></td>
        <td><%= link_to 'Destroy', sighting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sighting', new_sighting_path %>
<div>
  <input type="date" id="sighting_date"/>
  <input type="time" id="sighting_time"/>
  <input type="float" id="sighting_latitude" placeholder="Latitude"/>
  <input type="float" id="sighting_longitude" placeholder="Longitude"/>
  <input type="color" id="sighting_color" />
  <%= select(:sighting, :animal_id, @animals_for_select, id: "sighting_animal_id") %>
  <button type="button" id="add_new_sighting">Add New Sighting</button>
</div>

<p>
  <strong>Calendar:</strong>
</p>

<div id="calendar"></div>
